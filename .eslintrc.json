{
    "extends": ["@rocketseat/eslint-config/node"],
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn", 
            {
                "varsIgnorePattern": "^_",  
                "argsIgnorePattern": "^_" 
            }
        ],
        "no-useless-constructor": "off",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "tabWidth": 4,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false
            }
        ]
    }
}